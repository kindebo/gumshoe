<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/linearLayout" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="File Name" android:paddingLeft="3dp" android:paddingTop="10dp"></TextView>
    <EditText android:layout_height="wrap_content" android:padding="5dp" android:layout_width="fill_parent" android:clickable="true" android:id="@+id/edtName" android:hint="Script name"></EditText>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout2">
        <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Content" android:paddingLeft="3dp"></TextView>
    </LinearLayout>
    <EditText android:layout_height="fill_parent" android:layout_weight="1" android:gravity="top" android:padding="10dp" android:layout_width="fill_parent" android:clickable="true" android:id="@+id/edtScript" android:hint="Script contents"></EditText>
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:paddingTop="5dp">
        <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" android:id="@+id/btnExit" android:text="Exit"></Button>
        <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1" android:id="@+id/btnSave" android:text="Save"></Button>
    </LinearLayout>
</LinearLayout>