<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_height="wrap_content" android:layout_width="wrap_content">
    <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" android:padding="5dp" android:textSize="18dp" android:textStyle="bold" android:paddingBottom="5dp" android:text="WARNING: Keep your data secure, use a strong password."></TextView>
    <TextView android:layout_alignParentLeft="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Name: " android:id="@+id/name_tv" android:layout_below="@+id/textView2" android:paddingTop="5dp"></TextView>
    <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_below="@+id/name_tv" android:layout_height="wrap_content" android:layout_alignLeft="@+id/name_tv" android:text="Passphrase:"></TextView>
    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_below="@+id/textView1" android:layout_alignLeft="@+id/textView1" android:id="@+id/edtKey" android:hint="e.g. jb96z7392Hx"></EditText>
    <Button android:width="150dp" android:layout_height="wrap_content" android:text="Ok" android:layout_width="wrap_content" android:id="@+id/btnOk" android:layout_below="@+id/edtKey" android:layout_alignLeft="@+id/edtKey"></Button>
    <Button android:layout_height="wrap_content" android:text="Cancel" android:layout_width="fill_parent" android:id="@+id/btnCancel" android:layout_toRightOf="@+id/btnOk" android:layout_alignTop="@+id/btnOk" android:layout_alignBottom="@+id/btnOk"></Button>
    <TextView android:text="TextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/name_tv" android:layout_alignTop="@+id/name_tv" android:layout_alignBottom="@+id/name_tv" android:id="@+id/tvFileName" android:paddingTop="5dp"></TextView>
 
</RelativeLayout>